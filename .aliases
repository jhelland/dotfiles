# script to change wallpaper to specified input
function wallpaper() {
	dir="$1"
	wal -i $dir
}

# ls on cd
fuction chpwd() {
	emulate -L zsh
	ls -ac
}

extract() {
  if [ -f $1 ] ; then
    case $1 in
      *.tar.bz2)  tar xjf    $1   ;;
      *.tar.gz)   tar xzf    $1   ;;
      *.bz2)      bunzip2    $1   ;;
      *.rar)      unrar e    $1   ;;
      *.gz)       tar xf     $1   ;;
      *.tar)      tar xjf    $1   ;;
      *.tbz2)     tar xzf    $1   ;;
      *.tgz)      unzip      $1   ;;
      *.zip)      unzip      $1   ;;
      *.Z)        uncompress $1   ;;
      *.7z)       7z x       $1   ;;
      *)          echo "'$1' cannot be extracted via extract()" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}

backup() { cp '$1'{,.bak};}

sbs(){ du -b --max-depth 1 | sort -nr | perl -pe 's{([0-9]+)}{sprintf "%.1f%s", $1>=2**30? ($1/2**30, "G"): $1>=2**20? ($1/2**20, "M"): $1>=2**10? ($1/2**10, "K"): ($1, "")}e';} 

up() {
  LIMIT=$1
  P=$PWD
  for ((i=1; i <= LIMIT; i++))
  do
    P=$P/..
  done
  cd $P
  export MPWD=$P
}


